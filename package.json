{
  "name": "amber-web-extension",
  "description": "Serializable browsing sessions.",
  "license": "GPL-3.0",
  "author": "Payson Wallach <payson@paysonwallach.com>",
  "homepage": "https://github.com/paysonwallach/amber-web-extension#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/paysonwallach/amber-web-extension"
  },
  "bugs": {
    "url": "https://github.com/paysonwallach/amber-web-extension/issues"
  },
  "version": "0.1.0",
  "scripts": {
    "build": "run-p build:chrome build:firefox build:opera",
    "build:chrome": "cross-env NODE_ENV=production cross-env TARGET_BROWSER=chrome webpack",
    "build:firefox": "cross-env NODE_ENV=production cross-env TARGET_BROWSER=firefox webpack",
    "build:opera": "cross-env NODE_ENV=production cross-env TARGET_BROWSER=opera webpack",
    "dev:chrome": "cross-env NODE_ENV=development cross-env TARGET_BROWSER=chrome webpack --watch",
    "dev:firefox": "cross-env NODE_ENV=development cross-env TARGET_BROWSER=firefox webpack --watch",
    "dev:opera": "cross-env NODE_ENV=development cross-env TARGET_BROWSER=opera webpack --watch",
    "format": "run-p format:*",
    "format:js": "eslint --fix .",
    "format:package.json": "prettier-package-json --write",
    "prerelease": "scrivano",
    "release": "run-s build standard-version release:*",
    "release:amo": "web-ext-submit --source-dir distribution",
    "release:cws": "webstore upload --source=distribution --auto-publish",
    "test": "run-s format:* build",
    "watch": "webpack --mode=development --watch"
  },
  "dependencies": {
    "@babel/runtime": null,
    "dexie": null,
    "js-yaml": null,
    "loglevel": null,
    "loglevel-plugin-prefix": null,
    "react": null,
    "react-dom": null,
    "tslib": "^2.1.0",
    "typescript-json-serializer": "^2.5.2",
    "webext-options-sync": null,
    "webextension-polyfill-ts": null
  },
  "devDependencies": {
    "@babel/core": null,
    "@babel/plugin-proposal-class-properties": null,
    "@babel/plugin-proposal-decorators": null,
    "@babel/plugin-proposal-object-rest-spread": null,
    "@babel/plugin-transform-runtime": null,
    "@babel/preset-env": null,
    "@babel/preset-react": null,
    "@babel/preset-typescript": null,
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/js-yaml": null,
    "@types/react": null,
    "@types/react-dom": null,
    "@types/uuid": null,
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "autoprefixer": null,
    "babel-loader": null,
    "babel-plugin-parameter-decorator": null,
    "babel-plugin-transform-typescript-metadata": null,
    "chrome-webstore-upload-cli": null,
    "copy-webpack-plugin": null,
    "cross-env": "^7.0.3",
    "css-loader": null,
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": null,
    "husky": "^4.3.6",
    "mini-css-extract-plugin": null,
    "node-sass": null,
    "npm-run-all": "^4.1.5",
    "optimize-css-assets-webpack-plugin": null,
    "postcss": null,
    "postcss-loader": null,
    "prettier": "^2.2.1",
    "prettier-package-json": "^2.1.3",
    "resolve-url-loader": null,
    "sass-loader": null,
    "scrivano": "^0.1.0",
    "size-plugin": null,
    "standard-version": "^9.1.0",
    "terser-webpack-plugin": null,
    "ts-loader": null,
    "typescript": "^4.1.3",
    "web-ext": null,
    "webpack": "^5.11.1",
    "webpack-cli": "^4.3.1",
    "wext-manifest-loader": null,
    "wext-manifest-webpack-plugin": null,
    "zip-webpack-plugin": null
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run format"
    }
  },
  "meta": {
    "title": "Amber Web Extension",
    "repository": {
      "owner": "paysonwallach",
      "name": "amber-web-extension"
    },
    "license": {
      "name": "GNU General Public License v3.0",
      "url": "https://github.com/paysonwallach/amber-web-extension/blob/master/LICENSE"
    },
    "codeOfConduct": {
      "url": "https://github.com/paysonwallach/amber-web-extension/blob/master/CODE_OF_CONDUCT.md"
    },
    "releases": {
      "url": "https://github.com/paysonwallach/amber-web-extension/releases"
    }
  },
  "standard-version": {
    "scripts": {
      "precommit": "npm run prerelease"
    }
  }
}
